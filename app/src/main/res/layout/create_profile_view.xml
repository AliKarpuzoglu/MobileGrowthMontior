<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="de.hs_mannheim.planb.mobilegrowthmonitor.CreateProfileView">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_create_profile_view"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/et_lastname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/et_firstname"
        android:layout_gravity="left|center_vertical"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/ib_profilepicture"
        android:hint="Enter lastname"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_firstname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="56dp"
        android:layout_toRightOf="@+id/ib_profilepicture"
        android:hint="Enter firstname"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true" />

    <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_gender"
        android:layout_toRightOf="@+id/tv_birthdate"
        android:layout_toEndOf="@+id/tv_birthdate">

        <RadioButton
            android:id="@+id/rb_sex_male"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Male" />

        <RadioButton
            android:id="@+id/rb_sex_female"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Female" />
    </RadioGroup>

    <DatePicker
        android:id="@+id/dp_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tv_birthdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:padding="5dp" />
    <!--DatePicker only API level 21 or higher!
     Nochmal Hannah fragen-->

    <ImageButton
        android:id="@+id/ib_profilepicture"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_lastname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/et_firstname"
        android:layout_margin="5dp"
        android:background="#33a8a8a8"
        android:onClick="startGalleryOrCamera"
        android:src="@drawable/ic_photo_camera_black_48dp" />

    <Button
        android:id="@+id/btn_saveProfile"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal|bottom"
        android:text="@string/save"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ib_profilepicture"
        android:layout_toEndOf="@+id/ib_profilepicture" />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ib_profilepicture"
        android:layout_alignStart="@+id/ib_profilepicture"
        android:layout_below="@+id/ib_profilepicture"
        android:layout_marginTop="10dp"
        android:text="Geschlecht" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geburtsdatum"
        android:id="@+id/tv_birthdate"
        android:layout_below="@+id/rg_gender"
        android:layout_alignLeft="@+id/tv_gender"
        android:layout_alignStart="@+id/tv_gender"
        android:layout_marginTop="20dp" />

</RelativeLayout>