<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.hs_mannheim.planb.mobilegrowthmonitor.ProfileView"
    android:weightSum="1">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ib_profilepic"
        android:src="@drawable/ic_add_a_photo_black_24dp"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tv_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/firstname"
        android:textSize="24dp"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ib_profilepic"
        android:layout_toEndOf="@+id/ib_profilepic" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        android:textSize="24dp"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_firstname"
        android:layout_toEndOf="@+id/tv_firstname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:id="@+id/tv_date_last_measurement"
        android:layout_below="@+id/tv_firstname"
        android:layout_toRightOf="@+id/ib_profilepic"
        android:layout_toEndOf="@+id/ib_profilepic"
        android:textSize="20dp"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height"
        android:id="@+id/tv_height"
        android:layout_below="@+id/tv_date_last_measurement"
        android:layout_toRightOf="@+id/ib_profilepic"
        android:layout_toEndOf="@+id/ib_profilepic"
        android:textSize="20dp"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:id="@+id/tv_weight"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_alignTop="@+id/tv_height"
        android:layout_toRightOf="@+id/tv_height"
        android:layout_toEndOf="@+id/tv_height" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/foto"
        android:drawableLeft="@drawable/ic_photo_camera_black_48dp"
        android:layout_below="@+id/tv_weight"
        android:textSize="22dp"
        android:textAlignment="viewStart"
        android:padding="5dp"
        android:onClick="startCamera" />

    <Button
        android:id="@+id/btn_graphs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/graph"
        android:drawableLeft="@drawable/ic_timeline_black_48dp"
        android:layout_below="@+id/btn_camera"
        android:textSize="22dp"
        android:textAlignment="viewStart"
        android:padding="5dp"
        />

    <Button
        android:id="@+id/btn_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gallery"
        android:drawableLeft="@drawable/ic_photo_library_black_48dp"
        android:layout_below="@+id/btn_graphs"
        android:textSize="22dp"
        android:textAlignment="viewStart"
        android:padding="5dp"
        android:onClick="startGallery"/>

    <Button
        android:id="@+id/btn_export"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/export"
        android:drawableLeft="@drawable/ic_mail_outline_black_48dp"
        android:layout_below="@+id/btn_gallery"
        android:textSize="22dp"
        android:textAlignment="viewStart"
        android:padding="5dp" />

</RelativeLayout>
